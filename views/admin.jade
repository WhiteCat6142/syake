extends base

block content
  h3 nodes
  ul
   each node in nodes
    li
     |#{node}
     a(href='node/del/'+node) [x]
  form(action='node' method='post')
   input(name="node" type="text")
   button(type="submit") Add
  h3 friends
  ul
   each node in friends
    li
     |#{node}
  form(action='friend' method='post')
   input(name="node" type="text")
   button(type="submit") Add
  a(href='byebye') byebye
  h3 threads
  ul
   each thread in x
    li
     a(href="new/"+thread.node+"/"+thread.file) #{thread.title} (#{thread.node})
block rside
  a(href="refresh") refresh