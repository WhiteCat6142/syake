extends base

block append scripts
 .hidden(id="records") #{records}
 script(type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/blueimp-md5/2.3.0/js/md5.min.js")
 script(type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/marked/0.3.5/marked.min.js")
 script(type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.4.0/highlight.min.js")
 script(type="text/javascript" src="/js/lib/BigInt.js")
 script(type="text/javascript" src="/js/sign.js")
 script(type="text/javascript" src="/js/bbs.js")
 script(type="text/javascript" src="/js/lib/fx_methods.js")
 link(rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.8.2/css/lightbox.min.css" integrity="sha384-pnkRj/o9mh07rfWxV9yY0Tik4Cn+tYLX+hu+gfN2s5bd7hwM1q5rAqGyA21Iz17u" crossorigin="anonymous")
 link(rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.4.0/styles/default.min.css")
 script(type="text/javascript" src="/js/lib/lightbox.min.js")

block content
    div(id="msg")
    form.well.col-md-12(method="post",action="/thread.cgi",id="post-form")
     input(type="hidden",name="cmd",id="cmd")
     input(type="hidden",value=file,name="file")
     .input-wrapper
      .col-md-4
       span.input-group-addon
        span.glyphicon.glyphicon-user
        |Name
       input.form-control(type="text",name="name")
      .col-md-5
       span.input-group-addon
        span.glyphicon.glyphicon-envelope
        |Mail
       input.form-control(type="text",name="mail")
      .col-md-3
       span.input-group-addon
        span.glyphicon.glyphicon-eye-close
        |Sign
       input.form-control(type="text",name="sign")
      .col-md-12
       span.input-group-addon
        span.glyphicon.glyphicon-font
        |Text
       textarea.form-control(name="body",rows="6")
      .col-md-8.col-md-offset-5
       button.btn.btn-primary(type="submit")
        span.glyphicon.glyphicon-pencil
        |Post
       a.btn(href="/gateway.cgi/motd") 利用規約
    script(type="text/template",id="tmpl")
     |{{#msgs}}
     .panel.panel-default.new-record(id="{{id}}")
      .panel-heading
       span.glyphicon.glyphicon-tag {{id}}
       |{{#name}}
       span.glyphicon.glyphicon-user {{name}}
       |{{/name}}
       |{{#pubkey}}
       span.glyphicon.glyphicon-ok {{pubkey}}
       |{{/pubkey}}
       span.glyphicon.glyphicon-time {{date}}
      .clearfix
      .panel-body {{{body}}}
     |{{/msgs}}